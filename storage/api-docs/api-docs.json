{
    "openapi": "3.0.0",
    "info": {
        "title": "Backend Laravel Api documentation",
        "description": "Backend Laravel API description",
        "contact": {
            "email": "info@example.com"
        },
        "license": {
            "name": "MIT"
        },
        "version": "0.2.0"
    },
    "servers": [
        {
            "url": "https://backend-laravel.herokuapp.com",
            "description": "Api Server"
        }
    ],
    "paths": {
        "/api/v1/ping": {
            "get": {
                "tags": [
                    "Ping"
                ],
                "summary": "Return current status of app",
                "responses": {
                    "200": {
                        "description": "Current app status",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/PingSchema"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/roles": {
            "get": {
                "tags": [
                    "Roles"
                ],
                "summary": "Return roles list",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/limit_query"
                    },
                    {
                        "$ref": "#/components/parameters/sort_query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Role list",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/RolesSchema"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "PingSchema": {
                "title": "Ping",
                "description": "Ping model",
                "properties": {
                    "data": {
                        "description": "Ping status",
                        "type": "string",
                        "items": {
                            "properties": {
                                "app_version": {
                                    "description": "Backend current version",
                                    "type": "string",
                                    "example": "1.0.0"
                                }
                            },
                            "type": "object"
                        }
                    }
                },
                "type": "object"
            },
            "RolesSchema": {
                "title": "Roles",
                "description": "Roles model",
                "properties": {
                    "data": {
                        "description": "List of roles",
                        "type": "array",
                        "items": {
                            "properties": {
                                "id": {
                                    "description": "ID of the role",
                                    "type": "number",
                                    "example": 1
                                },
                                "role": {
                                    "description": "Name of the role",
                                    "type": "string",
                                    "example": "admin"
                                }
                            },
                            "type": "object"
                        }
                    }
                },
                "type": "object"
            }
        },
        "parameters": {
            "limit_query": {
                "name": "per_page",
                "in": "query",
                "description": "Limit the number of results",
                "schema": {
                    "type": "number",
                    "default": 15
                }
            },
            "sort_query": {
                "name": "sort",
                "in": "query",
                "description": "Sort the result",
                "schema": {
                    "type": "string",
                    "default": "id"
                }
            }
        }
    },
    "security": [
        []
    ]
}